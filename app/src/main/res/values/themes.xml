<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme Theme.AppCompat.Light.NoActionBar -->
    <style name="Theme.DefaultDark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- android:colorPrimaryDark is the color of the action bar -->
        <item name="android:colorPrimaryDark">@color/background_defaultDarkTheme</item>
        <item name="backgroundColor">@color/background_defaultDarkTheme</item>
        <item name="digitColor">@color/digits_defaultDarkTheme</item>
        <item name="CColor">@color/C_defaultDarkTheme</item>
        <item name="operatorColor">@color/operators_defaultDarkTheme</item>
        <item name="equalsColor">@color/equals_defaultDarkTheme</item>
        <item name="buttonsColor">@color/buttons_defaultDarkTheme</item>
        <item name="buttonPanelColor">@color/buttonPanel_defaultDarkTheme</item>
        <item name="expressionColor">@color/expression_defaultDarkTheme</item>
        <item name="buttonBorderColor">@color/buttonBorders_defaultDarkTheme</item>
        <item name="buttonPressedColor">@color/buttonPressed_defaultDarkTheme</item>
        <item name="themeSelectedColor">@color/themeSelected_defaultDarkTheme</item>
    </style>

